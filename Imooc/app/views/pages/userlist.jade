extends ../template/layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th name
                        th password
                        th
                        //th
                        th
                        th
                tboady
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{item.password}
                            //td #{moment(item.meta.creationData).format("MM/DD/YYYY")}
                            td: a.btn.btn-primary(data-id="#{item._id}" href="/user/#{item._id}") 查看
                            td: a.btn.btn-success(data-id="#{item._id}" href="/user/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del(data-id="#{item._id}") 删除

